
@{
    ViewBag.Title = "สืบค้นผลแลป";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/AssetsTheme/DataTables/datatables.css">

<script type="text/javascript" charset="utf8" src="~/AssetsTheme/DataTables/datatables.js"></script>

<script>
    $(function () {
        $("#keywords").keyup(function () {
            var btnSubmit = $("#btnSubmit");
            if ($(this).val().trim() != "") {
                btnSubmit.removeAttr("disabled");
            } else {
                btnSubmit.attr("disabled", "disabled");
            }
        });
    });
</script>

<script>
    $(function () {
        $("#dateTo").change(function () {
            var btnSubmit = $("#btnSubmit");
            if ($(this).val().trim() != "") {
                btnSubmit.removeAttr("disabled");
            } else {
                btnSubmit.attr("disabled", "disabled");
            }
        });
    });
</script>



<div class="back-to-top"></div>

<div class="page-section">
    <div class="container">
        <div class="row">
            <h2 class="font-weight-bold">ยินดีต้อนรับคุณ @Session["Username"] กรุณาเลือกเมนูเพื่อทำรายการ</h2>
        </div>
        <div class="row mt-3">
            <a class="btn btn-info mt-1" href="#"><i class="mdi mdi-24px mdi-clipboard-search-outline"></i>  สืบค้นผลแลป</a> &nbsp; &nbsp;
            <a class="btn btn-outline-info mt-1" href="@Url.Action("ImportExcelFile","AdminPanel")"><i class="mdi mdi-24px mdi-microsoft-excel"></i>  เพิ่มไฟล์ Excel เข้าระบบ</a> &nbsp; &nbsp;
            <a class="btn btn-outline-info mt-1" href="@Url.Action("ChangePassword","Login",new { id = Session["Id"] })"><i class="mdi mdi-24px mdi-key-chain"></i>  เปลี่ยนรหัสผ่าน</a> &nbsp; &nbsp;
            <a class="btn btn-outline-info mt-1" href="@Url.Action("ClearPdfFileTemp","Patient")"><i class="mdi mdi-24px mdi-archive-remove-outline"></i>  เคลียร์ไฟล์ PDF ชั่วคราวในเซิร์ฟเวอร์</a>
        </div>
    </div>
    <hr />
</div>


<div class="container sidebar-block">
    <h4 class="sidebar-title">ค้นหาผลแลป</h4>
    <div class="container">
        @using (Html.BeginForm("SearchLabResult", "AdminPanel", FormMethod.Get))
        {
            <div class="row">
                <div class="col">
                    <label>ค้นหาโดย เลขบัตรประชาชน หรือ LN หรือ ID-Passport</label>
                    <input type="text" name="keywords" id="keywords" class="form-control">
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-6">
                    <label>ค้นหาโดย วันที่เริ่มจาก (Date from)</label>
                    <input type="date" id="dateFrom" name="dateFrom" data-date-format="DDMMYYYY" class="form-control" autocomplete="off">
                </div>
                <div class="col-6">
                    <label>ถึง (To)</label>
                    <input type="date" id="dateTo" name="dateTo" data-date-format="DDMMYYYY" class="form-control" autocomplete="off">
                </div>
            </div>
            <div class="row mt-4">
                <div class="col-12">
                    <button id="btnSubmit" class="btn btn-primary btn-block" type="submit" disabled>ค้นหา</button>
                </div>
            </div>
        }
    </div>
</div>


<div class="page-section">
    <div class="container sidebar-block">
        <h4 class="sidebar-title">รายงานผลแลป</h4>

       
    </div>
</div>
